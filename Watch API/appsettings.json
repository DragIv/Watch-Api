{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5434;Database=CryptoWatchDB;Username=postgres;Password=1"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Seed": {
    "EnableDemoSeed": true,
    "ApiKey": "secret123",
    "RandomPriceSeed": 42
  },
  "AllowedHosts": "*"
}